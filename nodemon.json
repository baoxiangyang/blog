{
     "restartable": "rs",
     "ignore": [
         ".git",
         "node_modules/**/node_modules",
         "src",
         "tempFile",
         "tempFile/uploads"
     ],
     "verbose": true,
     "events": {
         "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "app.js",
        "routes",
        "config",
        "common",
        "dbs"
     ],
     "env": {
         "NODE_ENV": "development"
     },
     "ext": "js json",
     "legacy-watch": false
 }